<h2>Users</h2>
<div class="row g-3">
  <% for (let user of users) { %>

    <div class="col-4">
      <div class="card p-1">
        <h5 class="card-title"><%= user.firstName %></h5>
        <div class="card-text">
          <div><%= "lastName: " + user.lastName %></div>
          <div><%= "email: " + user.email %></div>
          <div><%= "user_id: " + user._id %></div>

          <div>
            <a class="btn btn-outline-danger" href="<%= '/users/' + user._id + '/delete' %>">Delete</a>
          </div>
          
        </div>
      </div>
    </div>


  <% } %>

 <%- include("./pagination.ejs", { currentPage, lastPage }) %>

</div>
